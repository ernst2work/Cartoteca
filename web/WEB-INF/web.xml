<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>servlets.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eBookStoreAdminUsersServlet</servlet-name>
        <servlet-class>servlets.eBookStoreAdminUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eBookStoreAdminUserRolesServlet</servlet-name>
        <servlet-class>servlets.eBookStoreAdminUserRolesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eBookStoreAdminBooksServlet</servlet-name>
        <servlet-class>servlets.eBookStoreAdminBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eBookStoreAdminUsersServlet</servlet-name>
        <url-pattern>/eBookStoreAdminUsersServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eBookStoreAdminUserRolesServlet</servlet-name>
        <url-pattern>/eBookStoreAdminUserRolesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eBookStoreAdminBooksServlet</servlet-name>
        <url-pattern>/eBookStoreAdminBooksServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
